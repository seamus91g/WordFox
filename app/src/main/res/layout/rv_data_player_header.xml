<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7198d6">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/data_page_player_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="12dp"
        android:src="@drawable/ppfox1_outline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/data_player_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/data_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:text="player name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/data_player_rank"
        app:layout_constraintLeft_toRightOf="@id/data_page_player_pic"
        app:layout_constraintTop_toTopOf="@id/data_page_player_pic" />

    <TextView
        android:id="@+id/data_player_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:text="player rank"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/data_page_player_pic"
        app:layout_constraintLeft_toRightOf="@id/data_page_player_pic"
        app:layout_constraintTop_toBottomOf="@id/data_player_name" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_header_drop_down_arrow"
        android:tag="drop_down_arrow"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="@id/data_page_player_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/data_page_player_pic" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.8" />

</android.support.constraint.ConstraintLayout>