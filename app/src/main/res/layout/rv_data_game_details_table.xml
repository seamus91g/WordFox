        android:id="@+id/game_details_row_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="game_details_player_6_name, best_found_1_player_6, best_found_2_player_6, best_found_3_player_6" />

    <TextView
        android:id="@+id/game_details_player_1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="game_details_player_1_name"
        android:text="Player 1"
        android:textStyle="italic"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline_game_details_one" />

    <TextView
        android:id="@+id/best_found_1_player_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="best_found_1_player_1"
        android:text="Round 1"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@+id/guideline_game_details_one"
        app:layout_constraintRight_toLeftOf="@+id/guideline_game_details_two" />

    <TextView
        android:id="@+id/best_found_2_player_1"
