<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:activity="com.example.seamus.wordfox.profile.ProfileActivity"
    tools:showIn="@layout/app_bar_profile">

    <ScrollView
        android:id="@+id/profile_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profileImageButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:maxHeight="270dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="Name here"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileImageButton" />

            <Button
                android:id="@+id/profile_save_name"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="Save"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bestgame_grid1"
                android:layout_marginBottom="50dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_username" />

            <TextView
                android:layout_width="100dp"
                android:gravity="center"
                android:id="@+id/bestword1"
                android:text="Word 1"
                app:layout_constraintTop_toBottomOf="@id/profile_save_name"
                app:layout_constraintBottom_toTopOf="@id/bestgame_grid1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/bestword2"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="100dp"
                android:gravity="center"
                android:id="@+id/bestword2"
                android:text="Word 2"
                app:layout_constraintTop_toBottomOf="@id/profile_save_name"
                app:layout_constraintBottom_toTopOf="@id/bestgame_grid1"
                app:layout_constraintLeft_toRightOf="@+id/bestword1"
                app:layout_constraintRight_toLeftOf="@+id/bestword3"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="100dp"
                android:gravity="center"

                android:id="@+id/bestword3"
                android:text="Word 3"
                app:layout_constraintTop_toBottomOf="@id/profile_save_name"
                app:layout_constraintBottom_toTopOf="@id/bestgame_grid1"
                app:layout_constraintLeft_toRightOf="@+id/bestword2"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="wrap_content" />



            <ImageView
                android:id="@+id/bestgame_grid1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/letter_grid_blank"
                app:layout_constraintBottom_toTopOf="@+id/longest_word_profile"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/bestgame_grid2"
                app:layout_constraintTop_toBottomOf="@id/profile_save_name" />

            <ImageView
                android:id="@+id/bestgame_grid2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/letter_grid_blank"
                app:layout_constraintBottom_toTopOf="@+id/longest_word_profile"
                app:layout_constraintLeft_toRightOf="@+id/bestgame_grid1"
                app:layout_constraintRight_toLeftOf="@+id/bestgame_grid3"
                app:layout_constraintTop_toTopOf="@id/bestgame_grid1" />

            <ImageView
                android:id="@+id/bestgame_grid3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/letter_grid_blank"
                app:layout_constraintBottom_toTopOf="@+id/longest_word_profile"
                app:layout_constraintLeft_toRightOf="@+id/bestgame_grid2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/bestgame_grid1" />

            <LinearLayout
                android:id="@+id/longest_word_profile"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bestgame_grid1">

                <TextView
                    android:id="@+id/profPicLongestWordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Longest Word: "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/profPicLongestWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recent_game"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bestgame_grid1">

                <TextView
                    android:id="@+id/RecentGameHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Longest Word: "
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/profPicData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Data"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recent_game" />

            <TextView
                android:id="@+id/profPicSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Settings"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profPicData" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
