<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contentMainxml"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:activity="com.example.seamus.wordfox.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <TextView
        android:id="@+id/numberPlayers"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="176dp"
        android:text="Number of players: "
        app:layout_constraintEnd_toStartOf="@+id/numberPicker"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/bStartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:onClick="startGameAct"
        android:text="Start Game"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/exportsql"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numberPicker"
        app:layout_constraintVertical_bias="0.223" />

    <Button
        android:id="@+id/exportsql"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Export DB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bStartGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>
