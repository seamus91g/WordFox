<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7F7F7F"
    android:padding="12dp">

    <TextView
        android:id="@+id/data_stat_item_description"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:text="stat item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/data_stat_item_quantity"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/data_stat_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@+id/data_stat_item_description"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>