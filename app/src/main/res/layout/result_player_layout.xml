<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/results_screen_profile_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingRight="6dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/result_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joey  (54%)"
            app:layout_constraintBottom_toTopOf="@+id/result_player_score"
            app:layout_constraintLeft_toRightOf="@+id/results_screen_profile_pic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/result_player_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 out of 22"
            app:layout_constraintBottom_toBottomOf="@+id/result_player_fox_pic"
            app:layout_constraintLeft_toRightOf="@+id/results_screen_profile_pic"
            app:layout_constraintTop_toBottomOf="@+id/result_player_name" />

        <ImageView
            android:id="@+id/result_player_fox_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="6dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/result_player_rank_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank"
            app:layout_constraintBottom_toTopOf="@+id/result_player_rank_name"
            app:layout_constraintLeft_toLeftOf="@+id/result_player_rank_name"
            app:layout_constraintRight_toRightOf="@+id/result_player_rank_name"
            app:layout_constraintTop_toTopOf="@+id/result_player_fox_pic" />

        <TextView
            android:id="@+id/result_player_rank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silver Fox"
            app:layout_constraintBottom_toBottomOf="@+id/result_player_fox_pic"
            app:layout_constraintRight_toLeftOf="@+id/result_player_fox_pic"
            app:layout_constraintTop_toBottomOf="@+id/result_player_rank_heading" />

        <!-- -->
        <android.support.constraint.Barrier
            android:id="@+id/result_player_section_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="results_screen_profile_pic,result_player_name,result_player_rank_name,result_player_rank_heading,result_player_fox_pic,result_player_score" />

        <TextView
            android:id="@+id/grid_row_bestword1"
            android:layout_width="@dimen/grid_snapshot_size"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:tag="player_word1"
            android:text="Word 1"
            app:layout_constraintBottom_toTopOf="@id/grid_row_grid1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/grid_row_bestword2"
            app:layout_constraintTop_toTopOf="@id/result_player_section_barrier" />

        <TextView
            android:id="@+id/grid_row_bestword2"
            android:layout_width="@dimen/grid_snapshot_size"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:tag="player_word2"
            android:text="Word 2"
            app:layout_constraintBottom_toBottomOf="@id/grid_row_bestword1"
            app:layout_constraintLeft_toRightOf="@+id/grid_row_bestword1"
            app:layout_constraintRight_toLeftOf="@+id/grid_row_bestword3"
            app:layout_constraintTop_toTopOf="@id/grid_row_bestword1" />

        <TextView
            android:id="@+id/grid_row_bestword3"
            android:layout_width="@dimen/grid_snapshot_size"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:tag="player_word3"
            android:text="Word 3"
            app:layout_constraintBottom_toBottomOf="@id/grid_row_bestword1"
            app:layout_constraintLeft_toRightOf="@+id/grid_row_bestword2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/grid_row_bestword1" />


        <ImageView
            android:id="@+id/grid_row_grid1"
            android:layout_width="@dimen/grid_snapshot_size"
            android:layout_height="@dimen/grid_snapshot_size"
            android:src="@drawable/letter_grid_blank"
            android:tag="player_grid1"
            app:layout_constraintBottom_toTopOf="@+id/result_player_divider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/grid_row_grid2"
            app:layout_constraintTop_toBottomOf="@id/grid_row_bestword1" />

        <ImageView
            android:id="@+id/grid_row_grid2"
            android:layout_width="@dimen/grid_snapshot_size"
            android:layout_height="@dimen/grid_snapshot_size"
            android:src="@drawable/letter_grid_blank"
            android:tag="player_grid2"
            app:layout_constraintBottom_toBottomOf="@+id/grid_row_grid1"
            app:layout_constraintLeft_toRightOf="@+id/grid_row_grid1"
            app:layout_constraintRight_toLeftOf="@+id/grid_row_grid3"
            app:layout_constraintTop_toTopOf="@id/grid_row_grid1" />

        <ImageView
            android:id="@+id/grid_row_grid3"
            android:layout_width="@dimen/grid_snapshot_size"
            android:layout_height="@dimen/grid_snapshot_size"
            android:src="@drawable/letter_grid_blank"
            android:tag="player_grid3"
            app:layout_constraintBottom_toBottomOf="@+id/grid_row_grid1"
            app:layout_constraintLeft_toRightOf="@+id/grid_row_grid2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/grid_row_grid1" />

        <View
            android:id="@+id/result_player_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/grid_row_grid1" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
