<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="@dimen/screen_margin"
    android:orientation="vertical"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.seamus.wordfox.GameActivity"
    tools:showIn="@layout/app_bar_game">


    <TextView
        android:id="@+id/givenLettersGameScreen"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/big_TextView_height"
        android:layout_gravity="center_horizontal"
        android:fontFamily="monospace"
        android:gravity="center_vertical"
        android:text="JDUENFISL"
        android:textColor="#01848f"
        android:textSize="@dimen/big_text_size"
        android:textStyle="bold"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <TextView
        android:id="@+id/currentAttempt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/small_TextView_height"
        android:textSize="@dimen/small_text_size"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="#01848f"
        android:fontFamily="monospace" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

    <LinearLayout
        android:id="@+id/guessGrid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_height"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <Space
            android:layout_width="@dimen/timer_width"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="@dimen/column_width"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/guessGridCell1"
                style="@style/TextViewButtons"
                android:onClick="gridCellClicked"
                android:text="B" />

            <Button
                android:id="@+id/guessGridCell4"
                style="@style/TextViewButtons"
                android:onClick="gridCellClicked"
                android:text="B" />

            <Button
                android:id="@+id/guessGridCell7"
                style="@style/TextViewButtons"
                android:onClick="gridCellClicked"
                android:text="B" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/column_width"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/guessGridCell2"
                style="@style/TextViewButtons"
                android:onClick="gridCellClicked"
                android:text="A" />

            <Button
                android:id="@+id/guessGridCell5"
                style="@style/TextViewButtons"
                android:onClick="gridCellClicked"
                android:text="A" />

            <Button
                android:id="@+id/guessGridCell8"
                style="@style/TextViewButtons"
                android:onClick="gridCellClicked"
                android:text="A" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/column_width"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/guessGridCell3"
                style="@style/TextViewButtons"
                android:onClick="gridCellClicked"
                android:text="C" />

            <Button
                android:id="@+id/guessGridCell6"
                style="@style/TextViewButtons"
                android:layout_width="match_parent"
                android:onClick="gridCellClicked"
                android:text="C" />

            <Button
                android:id="@+id/guessGridCell9"
                style="@style/TextViewButtons"
                android:onClick="gridCellClicked"
                android:text="C" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <LinearLayout
            android:layout_width="@dimen/timer_width"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timeblock1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:background="@color/colorPrimaryDark"
                android:gravity="center" />

            <TextView
                android:id="@+id/timeblock2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:background="@color/colorPrimaryDark"
                android:gravity="center" />

            <TextView
                android:id="@+id/timeblock3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:background="@color/colorPrimaryDark"
                android:gravity="center" />

            <TextView
                android:id="@+id/timeblock4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:background="@color/colorPrimaryDark"
                android:gravity="center" />

            <TextView
                android:id="@+id/timeblock5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:background="@color/colorPrimaryDark"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" />


    <LinearLayout
        android:id="@+id/gameButtons"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <Space
            android:layout_width="4dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/resetButton"
            style="@style/gameActionButtons"
            android:layout_width="@dimen/action_button_dimension"
            android:layout_height="@dimen/action_button_dimension"
            android:drawableTop="@mipmap/ic_reset_button"
            android:onClick="clearCurrentAttempt"
            android:text="RESET"
            android:textSize="@dimen/action_button_text_size" />

        <Space
            android:layout_width="26dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/submitButton"
            style="@style/gameActionButtons"
            android:layout_width="@dimen/action_button_dimension"
            android:layout_height="@dimen/action_button_dimension"
            android:drawableTop="@mipmap/ic_submit_button"
            android:onClick="submitCurrentAttempt"
            android:text="SUBMIT"
            android:textSize="@dimen/action_button_text_size" />

        <Space
            android:layout_width="26dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/shuffleButton"
            style="@style/gameActionButtons"
            android:layout_width="@dimen/action_button_dimension"
            android:layout_height="@dimen/action_button_dimension"
            android:drawableTop="@mipmap/ic_shuffle_button"
            android:onClick="shuffleGivenLetters"
            android:text="SHUFFLE"
            android:textSize="@dimen/action_button_text_size" />

        <Space
            android:layout_width="4dp"
            android:layout_height="match_parent" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" />

    <LinearLayout
        android:id="@+id/bestWordLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/longestAttempt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:hint="Your Longest Word"
            android:text=""
            android:textColor="#01848f"
            android:textSize="@dimen/small_text_size" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25" />

        <TextView
            android:id="@+id/lengthLongestAttempt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="Length"
            android:paddingRight="44dp"
            android:text=""
            android:textColor="#01848f"
            android:textSize="@dimen/small_text_size" />

    </LinearLayout>


</LinearLayout>
