<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="16dp"
    android:orientation="vertical"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.seamus.wordfox.GameActivity"
    tools:showIn="@layout/app_bar_game">


    <TextView
        android:id="@+id/givenLettersGameScreen"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:textSize="48dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:text="JDUENFISL"
        android:textColor="#01848f"
        android:fontFamily="monospace" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>

    <TextView
        android:id="@+id/currentAttempt"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:textSize="24dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="#01848f"
        android:fontFamily="monospace" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <LinearLayout
        android:id="@+id/guessGrid"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">




        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/guessGridCell1"
                style="@style/TextViewButtons"
                android:clickable="true"
                android:hapticFeedbackEnabled="true"
                android:onClick="gridCellClicked"
                android:text="B" />

            <TextView
                android:id="@+id/guessGridCell4"
                style="@style/TextViewButtons"
                android:onClick="gridCellClicked"
                android:text="B" />

            <TextView
                android:id="@+id/guessGridCell7"
                style="@style/TextViewButtons"
                android:onClick="gridCellClicked"
                android:text="B" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/guessGridCell2"
                style="@style/TextViewButtons"
                android:clickable="true"
                android:onClick="gridCellClicked"
                android:text="A" />

            <TextView
                android:id="@+id/guessGridCell5"
                style="@style/TextViewButtons"
                android:onClick="gridCellClicked"
                android:text="A" />

            <TextView
                android:id="@+id/guessGridCell8"
                style="@style/TextViewButtons"
                android:onClick="gridCellClicked"
                android:text="A" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/guessGridCell3"
                style="@style/TextViewButtons"
                android:clickable="true"
                android:onClick="gridCellClicked"
                android:text="C" />

            <TextView
                android:id="@+id/guessGridCell6"
                style="@style/TextViewButtons"
                android:onClick="gridCellClicked"
                android:text="C" />

            <TextView
                android:id="@+id/guessGridCell9"
                style="@style/TextViewButtons"
                android:onClick="gridCellClicked"
                android:text="C" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/timeblock1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:background="@color/colorPrimaryDark"
                android:gravity="center" />

            <TextView
                android:id="@+id/timeblock2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:background="@color/colorPrimaryDark"
                android:gravity="center" />

            <TextView
                android:id="@+id/timeblock3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:background="@color/colorPrimaryDark"
                android:gravity="center" />

            <TextView
                android:id="@+id/timeblock4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"/>

            <TextView
                android:id="@+id/timeblock5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:background="@color/colorPrimaryDark"
                android:gravity="center" />


        </LinearLayout>


    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>


    <LinearLayout
        android:id="@+id/gameButtons"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <Button
            android:id="@+id/resetButton"
            style="@style/gameActionButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clearCurrentAttempt"
            android:text="@string/reset" />

        <Button
            android:id="@+id/submitButton"
            style="@style/gameActionButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:onClick="submitCurrentAttempt"
            android:text="SUBMIT" />

        <Button
            android:id="@+id/shuffleButton"
            style="@style/gameActionButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="shuffleGivenLetters"
            android:text="SHUFFLE" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bestWordLL"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/longestAttempt"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:gravity="center"
            android:hint="Your Longest Word"
            android:text=""
            android:textSize="24dp"
            android:textColor="#01848f" />

        <TextView
            android:id="@+id/lengthLongestAttempt"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:gravity="center"
            android:hint="Letters"
            android:text=""
            android:textSize="24dp"
            android:textColor="#01848f" />

    </LinearLayout>


</LinearLayout>
