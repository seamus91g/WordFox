<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/round_end_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RoundResults.RoundEndScreen"
    tools:showIn="@layout/app_bar_round_end_screen">


    <ImageView
        android:id="@+id/round_end_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/round_end_longest_word"
        style="@style/foxSpeechBubblesTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Player longest word"
        android:maxWidth="135dp"
        android:text="@string/you_scored"
        app:layout_constraintBottom_toBottomOf="@id/round_end_banner"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="@id/round_end_banner"
        app:layout_constraintRight_toRightOf="@id/round_end_banner"
        app:layout_constraintTop_toTopOf="@id/round_end_banner" />

    <View
        android:id="@+id/round_end_banner_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/round_end_banner" />


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/round_end_profile_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/default_smiley"
        app:civ_border_color="@color/game_font_color"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="@id/round_end_result_grid"
        app:layout_constraintHorizontal_bias=".08"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/round_end_result_grid" />

    <TextView
        android:id="@+id/round_end_result_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:text="Joey"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/round_end_profile_pic"
        app:layout_constraintLeft_toRightOf="@id/round_end_profile_pic"
        app:layout_constraintRight_toLeftOf="@id/round_end_result_grid"
        app:layout_constraintTop_toTopOf="@id/round_end_profile_pic"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/round_end_result_best_word"
        android:layout_width="@dimen/grid_snapshot_size"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="conundrum"
        app:layout_constraintBottom_toTopOf="@id/round_end_result_grid"
        app:layout_constraintLeft_toLeftOf="@id/round_end_result_grid"
        app:layout_constraintRight_toRightOf="@id/round_end_result_grid"
        app:layout_constraintTop_toBottomOf="@id/round_end_banner_divider"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/round_end_result_grid"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/letter_grid_blank"
        app:layout_constraintBottom_toTopOf="@id/round_end_player_result_divider"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/round_end_result_best_word" />

    <TextView
        android:id="@+id/round_end_player_result_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="POSSIBLE WORDS"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/round_end_result_grid" />


    <ScrollView
        android:id="@+id/results_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:fillViewport="false"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/round_end_player_result_divider">

        <LinearLayout
            android:id="@+id/suggestions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>