<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/rv_rank_detail_fox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/silverfoxsilcoloured"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rv_rank_detail_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arialroundedbold"
            android:textColor="@color/game_font_color"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/rv_rank_detail_value"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rv_rank_detail_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/unicode_arialr"
            android:textColor="@color/game_font_color"
            app:layout_constraintBottom_toTopOf="@+id/rv_rank_detail_times_achieved"
            app:layout_constraintLeft_toLeftOf="@+id/rv_rank_detail_header"
            app:layout_constraintRight_toRightOf="@+id/rv_rank_detail_header"
            app:layout_constraintTop_toBottomOf="@+id/rv_rank_detail_header" />

        <TextView
            android:id="@+id/rv_rank_detail_times_achieved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/unicode_arialr"
            android:textColor="@color/game_font_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/rv_rank_detail_header"
            app:layout_constraintRight_toRightOf="@+id/rv_rank_detail_header"
            app:layout_constraintTop_toBottomOf="@+id/rv_rank_detail_value" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>