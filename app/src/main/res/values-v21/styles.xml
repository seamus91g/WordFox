<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <!--Style for rectangular buttons throughout the non-game screens-->
    <style name="RectangularButtons">
        <item name="android:textColor">@drawable/selector_rectangularbutton_color
        </item>
        <item name="android:layout_margin">4dp
        </item>
        <item name="android:textSize">@dimen/grid_button_text_size
        </item>
        <item name="android:textStyle">bold
        </item>
        <item name="android:paddingTop">2dp
        </item>
        <item name="android:paddingBottom">2dp
        </item>
        <item name="android:paddingLeft">8dp
        </item>
        <item name="android:paddingRight">8dp
        </item>
        <item name="android:fontFamily">monospace
        </item>
        <item name="android:drawableLeft">@drawable/selector_play_pic_icon
        </item>
        <item name="android:background">@drawable/selector_rectangularbutton
        </item>
    </style>

    <style name="CircularButtons">
        <item name="android:layout_width">@dimen/action_button_dimension
        </item>
        <item name="android:layout_height">@dimen/action_button_dimension
        </item>
        <item name="android:src">@drawable/selector_ic_play_arrow</item>
        <item name="android:background">@drawable/selector_circular_button
        </item>
        <item name="android:elevation">16dp
        </item>
    </style>



    <!-- Style for the reset action button in the game  -->
    <style name="gameResetButton">
        <item name="android:gravity">center
        </item>
        <item name="android:drawableTop">@drawable/selector_game_reset_button
        </item>
        <item name="android:layout_width">58dp
        </item>
        <item name="android:textColor">@drawable/selector_game_action_button_text_color
        </item>
        <item name="android:background">@drawable/selector_game_action_buttons_background
        </item>
        <item name="android:fontFamily">@font/arial_ff
        </item>
    </style>

    <!-- Style for the submit action button in the game-->
    <style name="gameSubmitButton">
        <item name="android:gravity">center
        </item>
        <item name="android:drawableTop">@drawable/selector_game_submit_button
        </item>
        <item name="android:layout_width">58dp
        </item>
        <item name="android:textColor">@drawable/selector_game_action_button_text_color
        </item>
        <item name="android:background">@drawable/selector_game_action_buttons_background
        </item>
        <item name="android:fontFamily">@font/arial_ff
        </item>
    </style>

    <!-- Style for the shuffle action button in the game-->
    <style name="gameShuffleButton">
        <item name="android:gravity">center
        </item>
        <item name="android:drawableTop">@drawable/selector_game_shuffle_button_png
        </item>
        <item name="android:textColor">@drawable/selector_game_action_button_text_color
        </item>
        <item name="android:layout_width">58dp
        </item>
        <item name="android:background">@drawable/selector_game_action_buttons_background
        </item>
        <item name="android:fontFamily">@font/arial_ff
        </item>
    </style>

</resources>