<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="dataTextHeadingStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextHeading</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@color/colorTextHeadingBG</item>
        <item name="android:windowBackground">@color/colorTextHeadingBG</item>
        <item name="android:colorBackground">@color/colorTextHeadingBG</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="dataTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextData</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <!-- Style for the TextView displaying the letters to be chosen during the game-->
    <style name="TextViewButtons">
        <item name="android:textColor">@android:color/white
        </item>
        <item name="android:layout_margin">4dp
        </item>
        <item name="android:textSize">@dimen/grid_button_text_size
        </item>
        <item name="android:textStyle">bold
        </item>
        <item name="android:padding">2dp
        </item>
        <item name="android:layout_width">match_parent
        </item>
        <item name="android:layout_height">@dimen/grid_button_height
        </item>
        <item name="android:fontFamily">monospace
        </item>
        <item name="android:background">@drawable/turquoise_background_rounded_border_textview
        </item>
    </style>

    <!-- Style for rectangular buttons throughout the non-game screens-->
    <style name="RectangularButtons">
        <item name="android:textColor">@drawable/selector_rectangularbutton_color
        </item>
        <item name="android:layout_margin">4dp
        </item>
        <item name="android:textSize">@dimen/grid_button_text_size
        </item>
        <item name="android:textStyle">bold
        </item>
        <item name="android:paddingTop">5dp
        </item>
        <item name="android:paddingBottom">5dp
        </item>
        <item name="android:paddingLeft">8dp
        </item>
        <item name="android:paddingRight">8dp
        </item>
        <item name="android:fontFamily">monospace
        </item>
        <item name="android:background">@drawable/selector_rectangularbutton
        </item>
    </style>

    <!-- Style for the action buttons in the game; shuffle, submit, reset-->
    <style name="gameShuffleButton">
        <item name="android:gravity">center
        </item>
        <item name="android:layout_width">58dp
        </item>
        <item name="android:textColor">@color/game_font_color
        </item>
        <item name="android:background">@drawable/turquoise_border_white_background
        </item>
    </style>

    <!-- Style for the action buttons in the game; shuffle, submit, reset-->
    <style name="gameResetButton">
        <item name="android:gravity">center
        </item>
        <item name="android:layout_width">58dp
        </item>
        <item name="android:textColor">@color/game_font_color
        </item>
        <item name="android:background">@drawable/turquoise_border_white_background
        </item>
    </style>

    <!-- Style for the action buttons in the game; shuffle, submit, reset-->
    <style name="gameSubmitButton">
        <item name="android:gravity">center
        </item>
        <item name="android:layout_width">58dp
        </item>
        <item name="android:textColor">@color/game_font_color
        </item>
        <item name="android:background">@drawable/turquoise_border_white_background
        </item>
    </style>

    <!-- Style for the fox buttons on the home screen for choosing number of players-->
    <style name="homeNumPLayersButtons">
        <item name="android:gravity">center
        </item>
        <item name="android:layout_width">58dp
        </item>
        <!--<item name="android:textColor">@android:color/primary_text_dark-->
        <!--</item>-->
        <item name="android:textColor">@color/game_font_color
        </item>
        <item name="android:background">@drawable/selector_foxbuttons
        </item>
        <!--<item name="android:background">@drawable/turquoise_border_white_background-->
        <!--</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
