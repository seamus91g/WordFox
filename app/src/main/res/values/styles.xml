<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.DataPage">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/game_font_color</item>
    </style>

    <style name="dataTextHeadingStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextHeading</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@color/colorTextHeadingBG</item>
        <item name="android:windowBackground">@color/colorTextHeadingBG</item>
        <item name="android:colorBackground">@color/colorTextHeadingBG</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="dataTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextData</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="BasicText">
        <item name="android:textColor">@color/game_font_color</item>
        <item name="android:fontFamily">@font/unicode_arialr</item>
    </style>

    <style name="BasicTextBold">
        <item name="android:textColor">@color/game_font_color</item>
        <item name="android:fontFamily">@font/arialroundedbold</item>
    </style>
    <!--android:background="@color/light"-->
    <style name="BasicTextBoldLightDarkBG">
        <item name="android:textColor">@color/colorTextHeading</item>
        <item name="android:fontFamily">@font/arialroundedbold</item>
        <item name="android:background">@color/game_font_color</item>
    </style>

    <style name="BasicTextLightDarkBG">
        <item name="android:textColor">@color/colorTextHeading</item>
        <item name="android:fontFamily">@font/unicode_arialr</item>
        <item name="android:background">@color/game_font_color</item>
    </style>

    <style name="wifiButtonsStyle">
        <item name="android:textColor">@drawable/selector_rectangularbutton_color</item>
        <item name="android:fontFamily">@font/arialroundedbold</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:background">@drawable/wifi_buttons_selector</item>
    </style>

    <style name="wifiButtonsStyleActive" parent="wifiButtonsStyle"></style>

    <!-- Style for the TextView displaying the letters to be chosen during the game-->
    <style name="TextViewButtons">
        <item name="android:textColor">@android:color/white
        </item>
        <item name="android:layout_margin">4dp
        </item>
        <item name="android:textSize">@dimen/grid_button_text_size
        </item>
        <item name="android:textStyle">bold
        </item>
        <item name="android:padding">2dp
        </item>
        <item name="android:layout_width">match_parent
        </item>
        <item name="android:layout_height">@dimen/grid_button_height
        </item>
        <item name="android:fontFamily">monospace
        </item>
        <item name="android:background">@drawable/turquoise_background_rounded_border_textview
        </item>
    </style>

    <!-- Style for rectangular buttons throughout the non-game screens-->
    <style name="RectangularButtons">
        <item name="android:textColor">@drawable/selector_rectangularbutton_color
        </item>
        <item name="android:layout_margin">4dp
        </item>
        <item name="android:textSize">@dimen/grid_button_text_size
        </item>
        <item name="android:textStyle">bold
        </item>
        <item name="android:paddingTop">2dp
        </item>
        <item name="android:paddingBottom">2dp
        </item>
        <item name="android:paddingLeft">8dp
        </item>
        <item name="android:paddingRight">8dp
        </item>
        <item name="android:layout_width">match_parent
        </item>
        <item name="android:layout_height">@dimen/grid_button_height
        </item>
        <item name="android:fontFamily">monospace
        </item>
        <item name="android:drawableLeft">@drawable/selector_ic_play_arrow_png
        </item>
        <item name="android:background">@drawable/selector_rectangularbutton
        </item>
    </style>

    <!-- Style for non play rectangular buttons -->
    <style name="DifferentDrawableButton">
        <item name="android:textColor">@drawable/selector_rectangularbutton_color
        </item>
        <item name="android:textSize">35sp
        </item>
        <item name="android:gravity">center
        </item>
        <item name="android:layout_margin">6dp
        </item>
        <item name="android:textStyle">bold
        </item>
        <item name="android:paddingTop">2dp
        </item>
        <item name="android:paddingBottom">2dp
        </item>
        <item name="android:paddingLeft">8dp
        </item>
        <item name="android:paddingRight">8dp
        </item>
        <item name="android:fontFamily">@font/arialroundedbold
        </item>
        <item name="android:background">@drawable/selector_rectangularbutton
        </item>
    </style>


    <!-- Style for CircularButtons throughout the non-game screens-->
    <style name="CircularButtons">
        <item name="android:layout_width">@dimen/action_button_dimension
        </item>
        <item name="android:layout_height">@dimen/action_button_dimension
        </item>
        <item name="android:src">@drawable/selector_ic_play_arrow_png</item>
        <item name="android:background">@drawable/selector_circular_button
        </item>
    </style>

    <style name="EditTextSubmitButton">
        <item name="android:layout_width">50dp
        </item>
        <item name="android:layout_height">50dp
        </item>
        <item name="android:src">@drawable/selector_submit_edittext
        </item>
        <item name="android:background">@null</item>
    </style>

    <!-- Style for the shuffle action button in the game-->
    <style name="gameShuffleButton">
        <item name="android:gravity">center
        </item>
        <item name="android:drawableTop">@drawable/selector_game_shuffle_button_png
        </item>
        <item name="android:textColor">@drawable/selector_game_action_button_text_color
        </item>
        <item name="android:layout_width">58dp
        </item>
        <item name="android:background">@drawable/selector_game_action_buttons_background
        </item>
        <item name="android:fontFamily">@font/arial_ff
        </item>
    </style>

    <!-- Style for the reset action button in the game-->
    <style name="gameResetButton">
        <item name="android:gravity">center
        </item>
        <item name="android:drawableTop">@drawable/selector_game_reset_button_png
        </item>
        <item name="android:layout_width">58dp
        </item>
        <item name="android:textColor">@drawable/selector_game_action_button_text_color
        </item>
        <item name="android:background">@drawable/selector_game_action_buttons_background
        </item>
        <item name="android:fontFamily">@font/arial_ff
        </item>
    </style>

    <!-- Style for the submit action button in the game-->
    <style name="gameSubmitButton">
        <item name="android:gravity">center
        </item>
        <item name="android:drawableTop">@drawable/selector_game_submit_button_png</item>
        <item name="android:layout_width">58dp
        </item>
        <item name="android:textColor">@drawable/selector_game_action_button_text_color
        </item>
        <item name="android:background">@drawable/selector_game_action_buttons_background
        </item>
        <item name="android:fontFamily">@font/arial_ff
        </item>
    </style>


    <!-- Style for the fox buttons on the home screen for choosing number of players-->


    <!-- Text style for the fox speech bubbles-->
    <style name="foxSpeechBubblesTextStyle">

        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/arialroundedbold</item>
        <item name="android:textColor">@color/game_font_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/heading_fontsize</item>
    </style>


    <!-- Text style for found words throughout all screens-->
    <style name="foundWordTextStyle">

        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/unicode_arialr</item>
        <item name="android:textColor">@color/game_font_color</item>
    </style>


    <!-- Text style for explanation text -->
    <style name="explanationTextStyle">
        <item name="android:fontFamily">@font/unicode_arialr</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>


    <!-- Text style for non headings text -->
    <style name="notHeadingTextStyle">
        <item name="android:fontFamily">@font/unicode_arialr</item>
        <item name="android:textColor">@color/game_font_color</item>
        <item name="android:textSize">@dimen/non_heading_fontsize</item>
    </style>


    <!-- Text style for headings -->
    <style name="headingTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/arialroundedbold</item>
        <item name="android:textColor">@color/game_font_color</item>
        <item name="android:textSize">@dimen/heading_fontsize</item>
    </style>


    <!-- Text style for very large headings  in the game-->
    <style name="largeHeadingTextStyle">
        <item name="android:fontFamily">@font/arialroundedbold</item>
        <item name="android:textColor">@color/game_font_color</item>
        <item name="android:textSize">@dimen/large_heading_fontsize</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>